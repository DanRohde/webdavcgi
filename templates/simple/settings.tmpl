<div id="settings" title="$tl(settings)">
<form id="settingsform">
<table>
$each#(confirm.upload,confirm.dnd,confirm.paste,confirm.rename,messages.warning,show.fileactions,show.fileactionlabels,show.dotfiles,show.dotfolders,show.statusbar)#'<tr><td>$tl(settings.$v)</td><td><input type="checkbox" name="settings.$v"/></td></tr>'#
<!--IF($ENABLE_THUMBNAIL)-->
<tr><td>$tl(settings.enable.thumbnails)</td><td><input type="checkbox" name="settings.enable.thumbnails"/></td></tr>
<!--ENDIF-->
$extension(settings)
<!--IF(scalar @SUPPORTED_VIEWS > 1)-->
<tr><td>$tl(settings.view)</td>
<td>
	<select name="settings.view">
		<option value="$view" title="$view">$viewname</option>
		$each#@SUPPORTED_VIEWS#'<option value="$v" title="$v">$tl(${v}view)</option>'#'$view'#
	</select>
</td>
</tr>
<!--ENDIF-->
<!--IF(scalar(keys %SUPPORTED_LANGUAGES) > 0)-->
<tr><td>$tl(settings.language)</td>
<td>
	<select name="settings.lang">
		$langList('<option value="$lang">$langname</option>')
	</select>
</td>
</tr>
<!--ENDIF-->

</table>
</form>
</div>
