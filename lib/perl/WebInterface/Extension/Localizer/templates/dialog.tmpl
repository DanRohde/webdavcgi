<div title="$tl(localizer)" class="localizer">
<fieldset class="localizer-selectors">
<label>$tl(localizer.selectlanguage)
	<select class="localizer-select-lang">
	<option value="">-</option>
	$each|%SUPPORTED_LANGUAGES|'<option value="$k">$v</option>'|
	</select>
</label>
<label>$tl(localizer.addnewlanguage)
	<input type="text" class="localizer-add-new-lang"><span class="contexthelp" data-htmltooltip="$inchelp(addnewlang)"></span>
</label>
<button class="localizer-edit-uilocale localizer-lang-required">$tl(localizer.edituilocale)</button>
<label>$tl(localizer.selectextension)
	<select class="localizer-select-extension localizer-lang-required">
	<option value="">-</option>
	$each|@ALL_EXTENSIONS|'<option value="$v">$v</option>'|
	</select>
</label>
<label>
<button class="localizer-download-all">$tl(localizer.downloadall)</button>
<span class="contexthelp" data-htmltooltip="$inchelp(downloadall)"></span>
</label>
</fieldset>
<div class="localizer-editor-pane">
</div>
<div class="localizer-statistics"></div>
</div>