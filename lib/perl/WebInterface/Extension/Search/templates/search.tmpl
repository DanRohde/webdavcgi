<div title="$tl(search.dialogtitle)" class="search dialogpane">
<script>
$(".search-datepicker").datepicker({ firstDay: $FIRSTDAY, monthNames : [$MONTHNAMES], monthNamesShort : [$MONTHNAMESABBR], dayNames : [$DAYNAMES], dayNamesShort : [$DAYNAMESABBR], dayNamesMin : [$DAYNAMESMIN], dateFormat : "$DATEFORMAT" });

</script>
<form method="post" action="#">
	<input type="hidden" name="action" value="search"/>
	<input type="hidden" class="search id" name="searchid" value="$getSearchId()"/>
   $renderSelectedFiles(<input type="hidden" name="files" value="$v"/>)
   
<div class="search infolders" title="$searchinfolderstitle">$tl(search.searchinfolders): $searchinfolders</div>
<div class="search formpanel">
	<div class="search query">
		$tl(search.query): <input class="search query" type="search" name="query" value=""/> <div class="contexthelp" data-htmltooltip="$inchelp(query)"></div>
	</div>
	<div class="search filenamesearch">		
			<input type="radio" name="searchin" value="filename" checked="checked" id="search-searchin-filename-$."/><label for="search-searchin-filename-$.">$tl(search.filenameoption)</label>
			<!--IF("$extconfig(allow_contentsearch)" eq "1")-->
				<input type="radio" name="searchin" value="content" id="search-searchin-content-$."/>
				<span>
			<!--ELSE-->
				<input type="radio" name="searchin" value="content" id="search-searchin-content-$." disabled="disabled"/>
				<span class="search disabled">
			<!--ENDIF-->
			<label for="search-searchin-content-$.">$tl(search.contentoption)</label></span>
	</div>
	<div class="search moreoptionscollapser">$tl(search.moreoptions)</div>
	<div class="search moreoptions">
		<div class="search typeonly">$tl(search.typeonly): 
				<input type="checkbox" name="filetype" checked="checked" id="search-typeonly-filetype-$."><label for="search-typeonly-filetype-$.">$tl(search.filetype)</label>   
				<input type="checkbox" name="foldertype" checked="checked" id="search-typeonly-foldertype-$."/><label for="search-typeonly-foldertype-$.">$tl(search.foldertype)</label>
				<input type="checkbox" name="linktype" checked="checked" id="search-typeonly-linktype-$."/><label for="search-typeonly-linktype-$.">$tl(search.linktype)</label> 
		</div>
		<div class="search size">
			$tl(search.size):
			<select name="sizecomparator" class="search-select">
				<option value="&lt;">&lt;</option>
				<option value="&lt;=">&le;</option>
				<option value="==" selected="selected">=</option>
				<option value="&gt;=">&ge;</option>
				<option value="&gt;">&gt;</option>
			</select>
			<input class="search-size" type="number" name="size" min="0" step="1"/>
			<select name="sizeunits" class="search-select">
				$each#@BYTEUNITORDER#'<option value="$v">$v</option>'#'$view'#
			</select>
			$tl(search.time): 
			<select name="timecomparator" class="search-select">
				<option value="&gt;=">$tl(search.olderthan)</option>
				<option value="&lt;=">$tl(search.newerthan)</option>
			</select>
			<input class="search-timecomparator" type="number" name="time" min="0" step="1"/>
			<select name="timeunits" class="search-select search-time-units" id="search-time-units-$.">
				<option value="seconds">$tl(search.seconds)</option>
				<option value="minutes">$tl(search.minutes)</option>
				<option value="hours">$tl(search.hours)</option>
				<option value="days" selected="selected">$tl(search.days)</option>
				<option value="weeks">$tl(search.weeks)</option>
				<option value="months">$tl(search.months)</option>
				<option value="years">$tl(search.years)</option>
			</select>
		</div>
		<div class="search daterange">
			$tl(lastmodified):
			<label for="search-mstartdate-$.">&ge;</label>
			<input id="search-mstartdate-$." type="text" size="10" name="mstartdate" class="search-datepicker">
			<label for="search-menddate-$.">&le;</label>
			<input id="search-menddate-$." type="text" size="10" name="menddate" class="search-datepicker">
			
			$tl(created):
			<label for="search-cstartdate-$.">&ge;</label>
			<input id="search-cstartdate-$." type="text" size="10" name="cstartdate" class="search-datepicker">
			<label for="search-cenddate-$.">&le;</label>
			<input id="search-cenddate-$." type="text" size="10" name="cenddate" class="search-datepicker">
		</div>
		<!--IF( "$extconfig(disable_dupsearch)" != "1")-->
			<div class="search duplicate"><input type="checkbox" name="dupsearch" id="search-dupsearch-$."><label for="search-dupsearch-$.">$tl(search.duplicatefiles)</label></div>
		<!--ENDIF-->
	</div>
</div>
<div class="search buttonpanel">
	<div><input class="search start" type="submit" name="search" value="$tl(search.startsearch)"/></div>
	<div><input class="search cancel" type="button" name="cancel" value="$tl(search.cancelsearch)"/></div>
</div>
<div class="search resultpanel">
	<div class="search statusbar"> </div>
	<div class="search resultcontentpane">$tl(search.noresult)</div>
	
</div>

</form>
<div class="template">
<div class="msg search inprogress">$tl(search.inprogress)</div>
<div class="msg search aborted">$tl(search.aborted)</div>
</div>
</div>